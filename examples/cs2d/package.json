{
  "name": "cs2d",
  "version": "0.2.0",
  "description": "CS2D Web Platform - TypeScript Edition",
  "type": "module",
  "scripts": {
    "install:all": "pnpm install && cd frontend && pnpm install",
    "dev": "concurrently -n \"frontend,backend\" -c \"cyan,green\" \"pnpm run dev:frontend\" \"pnpm run dev:backend\"",
    "dev:all": "concurrently -n \"frontend,backend,db\" -c \"cyan,green,yellow\" \"pnpm run dev:frontend\" \"pnpm run dev:backend\" \"pnpm run dev:db\"",
    "dev:frontend": "cd frontend && pnpm run dev",
    "dev:backend": "nodemon src/backend/server-simple.js || node src/backend/server-simple.js",
    "dev:backend:full": "nodemon src/backend/server.js || node src/backend/server.js",
    "dev:db": "redis-server",
    "start": "concurrently -n \"frontend,backend\" -c \"blue,magenta\" \"pnpm run start:frontend\" \"pnpm run start:backend\"",
    "start:frontend": "cd frontend && pnpm run preview",
    "start:backend": "NODE_ENV=production node src/backend/server.js",
    "build": "pnpm run build:frontend && pnpm run build:backend",
    "build:frontend": "cd frontend && pnpm run build",
    "build:backend": "echo 'Backend is Node.js - no build required'",
    "clean": "rm -rf node_modules frontend/node_modules frontend/dist pnpm-lock.yaml",
    "clean:install": "pnpm run clean && pnpm install:all",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:framework": "vitest tests/test-framework/",
    "test:integration": "vitest tests/integration/",
    "test:performance": "vitest tests/performance/",
    "test:game": "vitest tests/game/",
    "lint": "eslint src tests --ext .ts,.tsx --fix",
    "lint:check": "eslint src tests --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md,css,html}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md,css,html}\"",
    "typecheck": "tsc --noEmit",
    "pre-commit": "pnpm run typecheck && pnpm run lint:check && pnpm run format:check && pnpm run test --run",
    "dev-loop": "tsx test-dev-loop.ts",
    "dev-loop:continuous": "tsx test-dev-loop.ts --continuous",
    "dev-loop:performance": "tsx test-dev-loop.ts --continuous --interval=10000",
    "dev-loop:ci": "tsx test-dev-loop.ts --no-hot-reload --no-gameplay",
    "dev-loop:dashboard": "tsx test-dev-loop.ts --continuous --output=./dashboard-results",
    "dashboard": "tsx test-framework/TestDashboard.ts",
    "multi-agent:weapon": "node scripts/multi-agent-tasks.js generateWeaponSystem",
    "multi-agent:map": "node scripts/multi-agent-tasks.js generateMapSystem",
    "multi-agent:fix": "node scripts/multi-agent-tasks.js fixRenderIssues",
    "multi-agent:test": "node scripts/multi-agent-tasks.js generateTestSuite",
    "multi-agent:docker": "node scripts/multi-agent-tasks.js setupDocker",
    "multi-agent:spa": "node scripts/multi-agent-tasks.js migrateSPA",
    "multi-agent:docs": "node scripts/multi-agent-tasks.js generateAPIDocs",
    "multi-agent:sprint": "node scripts/multi-agent-tasks.js quickSprint",
    "multi-agent": "node scripts/multi-agent-tasks.js",
    "server": "node src/backend/server.js",
    "server:dev": "nodemon src/backend/server.js",
    "db:migrate": "node src/backend/database/migrate.js",
    "db:seed": "node src/backend/database/seed.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "concurrently": "^9.2.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jsdom": "^23.0.0",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.1.10",
    "playwright": "^1.40.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "nodemailer": "^6.9.4",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-steam": "^1.0.17",
    "pg": "^8.11.3",
    "rate-limiter-flexible": "^2.4.2",
    "redis": "^4.6.8",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0",
    "ws": "^8.13.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.11.0"
}
