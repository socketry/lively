# CS2D Enhanced Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
SERVER_URL=http://localhost:3001
CLIENT_URL=http://localhost:5174
SERVER_ID=cs2d-server-1
SERVER_REGION=us-east

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cs2d_enhanced
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Steam API Configuration (Optional - for Steam OAuth)
STEAM_API_KEY=your-steam-api-key-here

# Email Configuration (Optional - for email verification/password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@cs2d-enhanced.com

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# Game Configuration
MAX_PLAYERS=1000
TICK_RATE=64
MAX_PING=200
DEFAULT_MAP=de_dust2

# Anti-Cheat Configuration
ANTICHEAT_ENABLED=true
TRUST_FACTOR_ENABLED=true
AUTO_BAN_THRESHOLD=0.95

# Matchmaking Configuration
MATCHMAKING_ENABLED=true
QUEUE_TIMEOUT=300000
MAX_SKILL_DIFFERENCE=500

# Voice Chat Configuration
VOICE_CHAT_ENABLED=true
VOICE_QUALITY=medium

# Monitoring & Logging
LOG_LEVEL=info
LOG_SQL=false
ENABLE_METRICS=true
SENTRY_DSN=

# CDN Configuration (Optional)
CDN_URL=
ASSET_BASE_URL=

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@cs2d-enhanced.com
ADMIN_PASSWORD=change-this-password

# Development Configuration
DEBUG=false
HOT_RELOAD=true
MOCK_STEAM_AUTH=false
SKIP_EMAIL_VERIFICATION=false

# Production Configuration (Override in production)
# DB_SSL=true
# REDIS_PASSWORD=your-redis-password
# NODE_ENV=production
# LOG_LEVEL=warn
# DEBUG=false